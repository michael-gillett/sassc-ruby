#!/bin/bash

set -euxo pipefail
docker build -t local_registry/go-links .

# Do not cache this build to ensure changes to the parent images are picked up
docker build -t local-registry/go-links_test . --file=test.Dockerfile --no-cache

docker-compose -f docker-compose.tests.yml up -d
set +e
docker-compose -f docker-compose.tests.yml run go-links_tests sh -c "bundle exec rake app:test"
rc=$?
docker-compose -f docker-compose.tests.yml down
exit $rc
