---
apiVersion: v1
kind: Service
metadata:
  namespace: default
  annotations:
    getambassador.io/config: |
      ---
      apiVersion: ambassador/v1
      kind:  Mapping
      name:  go-links-mapping
      host: go-links-gcp.admin.liveramp.net
      prefix: /
      service: go-links
      host_rewrite: go-links.admin.liveramp.net
      # This is  for ambassadorâ€™s impatience to get a response from your app.
      # timeout_ms: 3000 # add and tune this for your app. 3000ms is the default
  labels:
    app: go-links
  name: go-links
spec:
  ports:
  - port: 80
    protocol: TCP
    targetPort: app-server-port
  selector:
    app: go-links
<% if config['target'] == 'local' %>
  type: NodePort
<% end %>
