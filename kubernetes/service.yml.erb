---
apiVersion: v1
kind: Service
metadata:
  namespace: default
  annotations:
    getambassador.io/config: |
      ---
      apiVersion: ambassador/v1
      kind:  Mapping
      name:  go-links
      host: gcp-go-links.liveramp.net
      prefix: /
      service: go-links
      host_rewrite: gcp-go-links.liveramp.net
      # This is  for ambassadorâ€™s impatience to get a response from your app.
      timeout_ms: 6000 # add and tune this for your app. 3000ms is the default
  labels:
    app: go-links
  name: go-links
spec:
  ports:
  - port: 80
    protocol: TCP
    targetPort: 3000
  selector:
    app: go-links
  type: <%= config['target'] == 'local' ? 'NodePort' : 'LoadBalancer' %>
